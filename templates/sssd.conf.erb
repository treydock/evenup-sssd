# Managed by puppet - do not modify
[sssd]
config_file_version = 2
debug_level = 0x02F0
reconnection_retries = 3
sbus_timeout = 30
services = <%= @services.join(',') %>
domains = LDAP

[nss]
debug_level = 0x02F0
reconnection_retries = 3
filter_groups = <%= @filter_groups %>
filter_users = <%= @filter_users %>

[pam]
debug_level = 0x02F0
reconnection_retries = 3
offline_credentials_expiration = 0

<% if @with_autofs -%>
[autofs]

<% end -%>

<% if @with_sudo -%>
[sudo]

<% end -%>

[domain/LDAP]
debug_level = 0x02F0
cache_credentials = TRUE
entry_cache_timeout = 6000
enumerate = TRUE

id_provider = ldap
auth_provider = ldap
chpass_provider = ldap
access_provider = ldap
<% if @with_autofs -%>
autofs_provider = ldap
<% end -%>
<% if @with_sudo -%>
sudo_provider = ldap
<% end -%>

ldap_uri = <%= @ldap_uri %>
ldap_search_base = <%= @ldap_base %>
ldap_network_timeout = 3
ldap_tls_reqcert = <%= @ldap_tls_reqcert %>
ldap_tls_cacert = <%= @ldap_tls_cacert_real %>
ldap_schema = <%= @ldap_schema %>
ldap_id_use_start_tls = TRUE
ldap_chpass_update_last_change = TRUE
ldap_group_member = <%= @ldap_group_member %>
ldap_group_object_class = posixGroup
ldap_group_name = cn
ldap_pwd_policy = <%= @ldap_pwd_policy %>
ldap_account_expire_policy = <%= @ldap_account_expire_policy %>
ldap_access_order = filter,expire
ldap_access_filter = <%= @ldap_access_filter %>
<% if @with_autofs -%>
ldap_autofs_search_base = <%= @ldap_autofs_search_base_real %>
ldap_autofs_map_object_class = automountMap
ldap_autofs_entry_object_class = automount
ldap_autofs_map_name = ou
ldap_autofs_entry_key = cn
ldap_autofs_entry_value = automountInformation
<% end -%>
<% if @with_sudo -%>
ldap_sudo_search_base = <%= @ldap_sudo_search_base_real %>
<% end -%>
